<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ver_info_grupo"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="com.pes12.pickanevent.view.LoginActivity"
    android:background="#bfffc2">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        ></include>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            tools:context="com.pes12.pickanevent.view.LoginActivity"
            android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo"
                    android:textStyle="normal|bold"
                    android:textColor="#000"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="alguien@correo.com"
                    android:inputType="textEmailAddress"
                    android:background="@color/tw__solid_white"
                    android:layout_marginTop="6dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ContraseÃ±a"
                    android:textStyle="normal|bold"
                    android:textColor="#000"
                    android:layout_marginTop="6dp"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType = "textPassword"
                    android:background="@color/tw__solid_white"
                    android:layout_marginTop="6dp"
                    />


            <Button
                android:text="@string/DEFAULT_LOGIN"
                android:onClick="login"
                android:layout_width="150dp"
                android:layout_marginRight="10dp"
                android:layout_height="30dp"
                android:radius="20dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:background="@drawable/boton_amarillo_custom"
                android:layout_gravity="center"/>

            <Button
                android:text="Registrarme"
                android:layout_width="150dp"
                android:layout_marginRight="10dp"
                android:layout_height="30dp"
                android:radius="20dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:id="@+id/registro"
                android:onClick="registro"
                android:background="@drawable/boton_amarillo_custom"
                android:layout_gravity="center"/>


        </LinearLayout>

</LinearLayout>
