<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ver_info_grupo"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="com.pes12.pickanevent.view.VerInfoGrupoActivity"
    android:background="#bfffc2">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        ></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imagenGrupo"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="@string/DEFAULT_SEGUIR"
                android:layout_width="wrap_content"
                android:id="@+id/seguir"
                android:background="@drawable/boton_amarillo_custom"
                android:layout_height="26dp"
                android:layout_above="@+id/descr"
                android:layout_alignEnd="@+id/descr"
                android:layout_marginBottom="55dp" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/nombreGrupo"
                android:fontFamily="sans-serif"
                android:textSize="28sp"
                android:textColor="#000"
                android:layout_below="@+id/imagenGrupo"
                android:layout_alignParentStart="true"
                android:layout_height="55dp"
                android:textStyle="normal|bold"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="@string/DEFAULT_DESCRIPCION"
                android:layout_width="match_parent"
                android:id="@+id/descr"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_below="@+id/nombreGrupo"
                android:layout_height="20dp"
                android:background="#fff"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/descripcion"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_below="@+id/descr"
                android:paddingTop="5dp"
                android:scrollbars = "vertical"
                android:background="#fff"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/descr"
                android:layout_alignEnd="@+id/descr" />

            <TextView
                android:text="@string/DEFAULT_ETIQUETAS"
                android:layout_width="match_parent"
                android:id="@+id/etiquetas"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textColor="#000"
                android:scrollbars="vertical"
                android:background="#fff"
                android:layout_below="@+id/descripcion"
                android:textStyle="normal|bold"
                android:layout_marginTop="10dp"
                android:layout_height="21dp"
                android:layout_alignStart="@+id/Horizontal"
                android:layout_alignEnd="@+id/descripcion" />

            <TextView
                android:text="@string/DEFAULT_EVENTOS"
                android:layout_width="match_parent"
                android:id="@+id/EventosTitulo"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textColor="#000"
                android:scrollbars="vertical"
                android:background="#fff"
                android:textStyle="normal|bold"
                android:layout_height="24dp"
                android:layout_below="@+id/Horizontal"
                android:layout_marginTop="7dp"
                android:layout_alignStart="@+id/Horizontal"
                android:layout_alignEnd="@+id/Horizontal" />

            <ListView
                android:layout_width="match_parent"
                android:id="@+id/event"
                android:layout_below="@+id/EventosTitulo"
                android:layout_alignStart="@+id/EventosTitulo"
                android:layout_height="155dp"
                android:layout_alignEnd="@+id/EventosTitulo" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:id="@+id/Horizontal"
                android:scrollbars="none"
                android:layout_below="@+id/etiquetas"
                android:layout_alignEnd="@+id/descripcion"
                android:layout_alignStart="@+id/descripcion">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:id="@+id/Tags"
                    android:layout_marginBottom="7dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:paddingBottom="2dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="2dp"
                        android:id="@+id/Primero" />

                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:text="Editar tags"
                android:id="@+id/editarTags"
                android:background="@drawable/boton_amarillo_custom"
                android:layout_width="120dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/seguir"
                android:layout_marginTop="11dp"
                android:onClick="editarTags" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
