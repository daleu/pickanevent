<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ver_info_grupo"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="com.pes12.pickanevent.view.VerInfoGrupo"
    android:background="#bfffc2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imagenGrupo"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Descripción"
                android:layout_width="match_parent"
                android:id="@+id/descr"
                android:fontFamily="sans-serif"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_below="@+id/nombreGrupo"
                android:layout_alignParentStart="true"
                android:layout_height="20dp"
                android:background="#fff"
                android:textStyle="normal|bold"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="DescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripciónDescripción"
                android:layout_width="match_parent"
                android:id="@+id/descripcion"
                android:fontFamily="sans-serif"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_below="@+id/descr"
                android:layout_alignParentStart="true"
                android:paddingTop="5dp"
                android:scrollbars = "vertical"
                android:background="#fff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="70dp" />

            <TextView
                android:text="Etiquetas"
                android:layout_width="match_parent"
                android:id="@+id/etiquetas"
                android:fontFamily="sans-serif"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:scrollbars="vertical"
                android:background="#fff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/descripcion"
                android:layout_centerHorizontal="true"
                android:textStyle="normal|bold"
                android:layout_marginTop="10dp"
                android:layout_height="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/marcoEtiquetas"
                android:fontFamily="sans-serif"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:paddingTop="5dp"
                android:scrollbars="vertical"
                android:background="#fff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/etiquetas"
                android:layout_alignParentStart="true"
                android:layout_height="75dp" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tags"
                android:fontFamily="sans-serif"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:paddingTop="5dp"
                android:scrollbars="vertical"
                android:background="#e5e6d9"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_below="@+id/etiquetas"
                android:layout_alignParentStart="true"
                android:layout_height="63dp" />

            <TextView
                android:text="Eventos"
                android:layout_width="match_parent"
                android:id="@+id/EventosTitulo"
                android:fontFamily="sans-serif"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:scrollbars="vertical"
                android:background="#fff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textStyle="normal|bold"
                android:layout_height="24dp"
                android:layout_below="@+id/marcoEtiquetas"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="Soy El Nombre Del Grupo"
                android:layout_width="match_parent"
                android:id="@+id/nombreGrupo"
                android:fontFamily="sans-serif"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="28sp"
                android:textColor="#000"
                android:paddingTop="15dp"
                android:layout_below="@+id/imagenGrupo"
                android:layout_alignParentStart="true"
                android:layout_height="55dp"
                android:textStyle="normal|bold"
                android:layout_marginTop="15dp" />

            <Button
                android:text="Seguir!"
                android:layout_width="wrap_content"
                android:id="@+id/seguir"
                android:background="#e3ee34"
                android:layout_height="26dp"
                android:layout_above="@+id/descr"
                android:layout_alignEnd="@+id/descr"
                android:layout_marginBottom="55dp" />

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/ev"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="467dp">

    </LinearLayout>

</RelativeLayout>
