<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e3ee34" />
            <gradient android:startColor="#e3ee34" android:endColor="#e3ee34"  />
        </shape>
    </item>
    <item android:drawable="@drawable/arrow_down_sign_to_navigate"
        android:state_pressed="true">
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </item>

</selector>